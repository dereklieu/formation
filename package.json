{
  "name": "formation",
  "version": "1.0.0",
  "description": "Static site publishing with S3, Lambda, and Terraform",
  "main": "index.js",
  "repository": "git@github.com:dereklieu/formation.git",
  "author": "Derek Lieu <dl@dereklieu.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config ./webpack.config.js --inline false",
    "clean": "rimraf build",
    "build": "webpack -p --progress",
    "copy": "mkdirp build && cd lambda && copy ./*.{js,json} ../build && cd ..",
    "lambda-install": "cd build && yarn --production && cd ..",
    "zip": "cd build && rimraf app-package.zip && cross-zip ./ app-package.zip && cd ..",
    "terraform-init": "cd ./infrastructure/env-dev && terraform init -input=true -backend-config=./backend.tfvars",
    "terraform-plan": "cd ./infrastructure/env-dev && terraform get && terraform plan --var-file ./terraform.tfvars",
    "terraform-apply": "cd ./infrastructure/env-dev && terraform get && terraform apply --var-file ./terraform.tfvars",
    "prepare-deploy": "yarn clean & yarn build && yarn copy && yarn lambda-install && yarn zip"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "copy": "^0.3.1",
    "cross-zip-cli": "^1.0.0",
    "css-loader": "^0.28.7",
    "cypress": "^3.1.4",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.6",
    "js-yaml": "^3.10.0",
    "mime": "^2.0.3",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "static-site-generator-webpack-plugin": "^3.4.1",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3"
  },
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  }
}
