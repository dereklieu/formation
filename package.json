{
  "name": "formation",
  "version": "1.0.0",
  "description": "Static site publishing with S3, Lambda, and Terraform",
  "main": "index.js",
  "repository": "git@github.com:dereklieu/formation.git",
  "author": "Derek Lieu <dl@dereklieu.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint app --ext .js",
    "start": "NODE_ENV=development webpack-dev-server --config ./webpack.config.js --inline false",
    "clean": "rimraf build",
    "build": "NODE_ENV=production webpack -p --progress",
    "copy": "mkdirp build && cd lambda && copy ./*.{js,json} ../build && cd ..",
    "lambda-install": "cd build && yarn --production && cd ..",
    "zip": "cd build && rimraf app-package.zip && cross-zip ./ app-package.zip && cd ..",
    "terraform-init": "cd ./infrastructure/env-dev && terraform init -input=true -backend-config=./backend.tfvars",
    "terraform-plan": "cd ./infrastructure/env-dev && terraform get && terraform plan --var-file ./terraform.tfvars",
    "terraform-apply": "cd ./infrastructure/env-dev && terraform get && terraform apply --var-file ./terraform.tfvars",
    "prepare-deploy": "yarn clean & yarn build && yarn copy && yarn lambda-install && yarn zip"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@cypress/webpack-preprocessor": "^4.0.3",
    "babel-loader": "^8.0.5",
    "copy": "^0.3.1",
    "cross-zip-cli": "^1.0.0",
    "css-loader": "^0.28.7",
    "cypress": "^3.1.4",
    "eslint": "^5.13.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^3.0.1",
    "js-yaml": "^3.10.0",
    "mini-css-extract-plugin": "^0.5.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "sass-resources-loader": "^2.0.0",
    "static-site-generator-webpack-plugin": "^3.4.2",
    "style-loader": "^0.19.0",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "slugify": "^1.3.4"
  }
}
